<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="370dp"
        android:layout_height="220dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/textoNombrePartido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Colombia vs Japon"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textoFecha"
            android:text="fecha"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textoFase"
            android:text="Fase de grupos"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textoVotosTeamA"
            android:text="Gana colombia 5 apuestas"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textoEmpates"
            android:text="Empate 3 apuestas "
            android:layout_marginTop="120dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textoVotosTeamB"
            android:text="Gana Japon : 2 apuestas"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="180dp"
            android:gravity="left"
            android:text="Apostar"
            android:textColor="@color/colorCian" />



    </android.support.v7.widget.CardView>
</LinearLayout>