<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginBottom="0dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/TextViewNombrePartidoBet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Home vs Away"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/TextViewFechaBet"
            android:text="Fecha"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewGroup"
            android:text="Fase de grupos"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewVotosTeamABet"
            android:text="Gana colombia 5 apuestas"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewEmpatesBet"
            android:text="Empate 3 apuestas "
            android:layout_marginTop="120dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewVotosTeamBBet"
            android:text="Gana Japon : 2 apuestas"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewScoreBet"
            android:text="Resultado : "
            android:layout_marginTop="180dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TextViewStatusBet"
            android:text="Estado : "
            android:layout_marginTop="200dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEditar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="220dp"
            android:gravity="left"
            android:text="Editar"
            android:textColor="@color/colorCian" />




    </android.support.v7.widget.CardView>
</LinearLayout>